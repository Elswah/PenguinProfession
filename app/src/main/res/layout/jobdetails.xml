<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="backTo"
                android:src="@drawable/backarrow" />
        </android.support.v7.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/textColor"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/companyLogo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="10dp"
                            android:src="@drawable/img_bg" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/jobCompnyTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="15dp"
                                android:text="senior android developer"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/companyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:layout_marginTop="8dp"
                                android:text="Mobileaders"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="11dp"
                            android:src="@drawable/starfavourite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:weightSum="4">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/tags" />

                        <TextView
                            android:id="@+id/jobTag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="android"
                            android:textSize="9sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/jobLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="Mansoura"
                            android:textSize="9sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/work" />

                        <TextView
                            android:id="@+id/jobwork"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="full Time"
                            android:textSize="9sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/tags" />

                        <TextView
                            android:id="@+id/jobSalary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:text="700 $"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingBottom="11dp"
                        android:paddingLeft="10dp"
                        android:weightSum="6">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/applyNow"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_applay"
                            android:onClick="applyForJob"
                            android:text="Apply now"
                            android:textColor="@color/textColor" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/fbApply"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/fb_applay"
                            android:textColor="@color/textColor" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/goApply"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/go_applay" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/twApply"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/tw" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/inApply"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/in_applay" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/jobDescribtion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="jobDescribtion"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/describtionDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="sssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\n" />

                    <TextView
                        android:id="@+id/skills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="skills"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/skills_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layoutDirection="ltr"
                        android:paddingLeft="10dp"></android.support.v7.widget.RecyclerView>


                    <TextView
                        android:id="@+id/jobDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="jodDetails"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jobDetailsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="sssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\nsssssssssssssssssssssssssssssssssssssssssss\n" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>