<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rec_lin"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:padding="11dp"
                android:src="@drawable/img_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jobTitleHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Senior Android Developer"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/descriptionHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="sssssssssssssssssssssssss"
                        android:textSize="7sp" />

                    <ImageView
                        android:id="@+id/arrawTo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:src="@drawable/arraw_hover" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/job"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/tags" />

                    <TextView
                        android:id="@+id/txtJob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text="Ui Designer"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/imgLocation"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/loc" />

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text="Mansoura"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/work"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/work" />

                    <TextView
                        android:id="@+id/txtwork"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:text="Mansoura"
                        android:textSize="9sp" />
                </LinearLayout>

            </LinearLayout>
            <!---->
            <!--<FrameLayout-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/arrow"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>